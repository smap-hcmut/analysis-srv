# ============================================================================
# Analytics Engine - Environment Configuration
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================
SERVICE_NAME=analytics-engine
SERVICE_VERSION=0.1.0
DEBUG=False
LOG_LEVEL=INFO

# ============================================================================
# API Service Settings
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# ============================================================================
# Database Settings
# ============================================================================
DATABASE_URL=postgresql+asyncpg://dev:dev123@localhost:5432/analytics_dev
DATABASE_URL_SYNC=postgresql://dev:dev123@localhost:5432/analytics_dev

# ============================================================================
# PhoBERT Model Settings
# ============================================================================
# Path to PhoBERT model directory (relative to project root)
PHOBERT_MODEL_PATH=infrastructure/phobert/models

# Maximum sequence length for tokenization
PHOBERT_MAX_LENGTH=128

# Model file name
PHOBERT_MODEL_FILE=model_quantized.onnx

# ============================================================================
# SpaCy-YAKE Keyword Extraction Settings
# ============================================================================
# SpaCy model to use for NLP tasks (en_core_web_sm, en_core_web_md, etc.)
SPACY_MODEL=en_core_web_sm

# YAKE language code (en, vi, etc.)
YAKE_LANGUAGE=en

# YAKE n-gram size (1=unigrams, 2=bigrams, 3=trigrams)
YAKE_N=2

# YAKE deduplication threshold (0.0-1.0, higher = more deduplication)
YAKE_DEDUP_LIM=0.8

# Maximum keywords to extract with YAKE
YAKE_MAX_KEYWORDS=30

# Maximum keywords to return in final results
MAX_KEYWORDS=30

# Score weight for named entities (0.0-1.0)
ENTITY_WEIGHT=0.7

# Score weight for noun chunks (0.0-1.0)
CHUNK_WEIGHT=0.5

# ============================================================================
# Aspect Mapping Settings
# ============================================================================
# Enable keyword-to-aspect mapping (true/false)
ENABLE_ASPECT_MAPPING=false

# Path to aspect dictionary YAML file
ASPECT_DICTIONARY_PATH=config/aspects.yaml

# Label for keywords without known aspect
UNKNOWN_ASPECT_LABEL=UNKNOWN

# ============================================================================
# RabbitMQ Configuration (for message queue)
# ============================================================================
# RabbitMQ connection URL
RABBITMQ_URL=amqp://guest:guest@localhost/

# Queue name for analytics messages
RABBITMQ_QUEUE_NAME=analytics_queue

# Number of unacknowledged messages to prefetch (QoS)
RABBITMQ_PREFETCH_COUNT=1

# ============================================================================
# MinIO Configuration (for model artifacts)
# ============================================================================
# MinIO endpoint for downloading PhoBERT model artifacts
MINIO_ENDPOINT=http://localhost:9000

# MinIO credentials
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
