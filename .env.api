# ==============================================================================
# Analytics Engine API Service - Environment Configuration
# ==============================================================================
# Minimal environment configuration for API-only deployment
# This file contains only the variables needed to run the API service
# without the full analytics pipeline dependencies

# ==============================================================================
# Database Configuration (Required)
# ==============================================================================
DATABASE_URL=postgresql+asyncpg://api_user:api_password@localhost:5432/analytics_production
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ==============================================================================
# Service Configuration
# ==============================================================================
SERVICE_NAME=analytics-api
SERVICE_VERSION=1.0.0

# ==============================================================================
# Logging Configuration
# ==============================================================================
LOG_LEVEL=INFO
DEBUG=false

# ==============================================================================
# API Service Configuration
# ==============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_CORS_ORIGINS=https://dashboard.yourdomain.com,https://admin.yourdomain.com

# ==============================================================================
# Optional: Performance Monitoring
# ==============================================================================
# Enable detailed request logging (false for production)
# DEBUG_RAW_DATA=false